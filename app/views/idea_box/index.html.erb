<div class="container">
  <a href='#' class='show-link'>Add New Idea</a>
  <form id="new-idea-form">
    <h4>Add New Idea</h4>
    <input type='text' name='title' placeholder="Title" />
    <textarea name='body' placeholder="Body"></textarea>
    <input type='text' name='tags' placeholder="Tags (comma separated)" />
    <button class='new-idea btn btn-sm btn-default'>Add Idea</button>
  </form>
  <form id="search">
    <input type='text' name='search' class='search-box' placeholder="Search" />
  </form>
  <a href='#' id='sort' class='pull-right'>Sort by Rating</a>
  <div id='ideas'></div>
</div>
